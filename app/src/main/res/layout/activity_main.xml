<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    style="@style/match_parent">

    <FrameLayout
        android:id="@+id/display_layout"
        style="@style/match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_display"
            style="@style/display_text_view" />
    </FrameLayout>

    <include
        layout="@layout/layout_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/editor_layout_margin_horizontal"
        android:layout_marginEnd="@dimen/editor_layout_margin_horizontal" />
</RelativeLayout>